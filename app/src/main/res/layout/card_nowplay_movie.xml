<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#fdeafffd"
        android:orientation="vertical"
        android:padding="8dp">
        <ImageView
            android:padding="5dp"
            android:id="@+id/now_photo"
            android:layout_width="150dp"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/poster_movie" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/now_photo"
            android:layout_toEndOf="@+id/now_photo">

        <fr.arnaudguyon.smartfontslib.FontButton
            style="@style/Animation.AppCompat.Dialog"
            android:layout_width="fill_parent"
            android:id="@+id/now_detail"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="#9ac63d"
            android:textColor="#00ffd9"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/up_detail"
            android:textSize="12sp"
            />

        <fr.arnaudguyon.smartfontslib.FontButton
            style="@style/Animation.AppCompat.Dialog"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:id="@+id/now_share"
            android:layout_height="40dp"
            android:background="#9ac63d"
            android:textColor="#00ffd9"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/up_share"
            android:textSize="12sp"
            android:layout_marginStart="10dp" />
        </LinearLayout>

        <fr.arnaudguyon.smartfontslib.FontTextView
            android:textColor="#000000"
            android:padding="5dp"
            android:layout_toRightOf="@id/now_photo"
            android:layout_toEndOf="@id/now_photo"
            android:id="@+id/now_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="hhh"
            android:textSize="16sp"
            android:textStyle="bold"
             />

        <fr.arnaudguyon.smartfontslib.FontTextView
            android:textColor="#000000"
            android:padding="5dp"
            android:layout_below="@+id/now_title"
            android:layout_toRightOf="@id/now_photo"
            android:layout_toEndOf="@id/now_photo"
            android:id="@+id/now_desc"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="hhh" />

        <fr.arnaudguyon.smartfontslib.FontTextView
            android:textColor="#000000"
            android:padding="5dp"
            android:layout_below="@id/now_desc"
            android:layout_toRightOf="@id/now_photo"
            android:layout_toEndOf="@id/now_photo"
            android:id="@+id/now_date"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="hhh" />


    </RelativeLayout>

</android.support.v7.widget.CardView>